<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>
      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :twitter, 'Twitter handle' %>
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :github, 'Github username' %>
    <%= f.text_field :github %>
  </div>
  <div class="field">
    <%= f.label :ruby_gems_id, 'RubyGems username' %>
    <%= f.text_field :ruby_gems_id %>
  </div>
  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website, :placeholder => 'http://www.example.com' %>
  </div>
  <div class="field">
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => "btn" %>
  </div>
<% end %>