<%= form_for(@suggestion) do |f| %>
  <% if @suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% @suggestion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :topic %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :your_name %><br />
    <%= f.text_field :suggester %>
  </div>
  <p style="width: 1px; height: 1px; overflow: hidden;">
    Please leave following field blank:
    <%= f.text_area :comment %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
